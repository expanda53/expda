<Root>
<verzio>20180322</verzio>
<mainpanel>
  <name>loginpanel</name>
  <text>Bejelentkezés</text>
  <bgcolor>#000000</bgcolor>
  <lua_on_create>egyeb/login_init.lua</lua_on_create>
</mainpanel>
<panel>
  <name>panel1</name>
  <width>match</width>
  <height>match</height>
  <top>0</top>
  <visible>true</visible>
  <bgcolor>#000000</bgcolor>
  <left>0</left>
</panel>
<label>
  <name>llogin</name>
  <top>0</top>
  <left>0</left>
  <width>match</width>
  <height>wrap</height>
  <visible>true</visible>
  <parent>panel1</parent>
  <style>reviewlabel</style>
  <text>Kezelő</text>
</label>
<text>
  <name>elogin</name>
  <top>30</top>
  <width>match</width>
  <parent>panel1</parent>
  <left>0</left>
  <visible>true</visible>
  <lua_on_change>egyeb/login_click.lua [elogin] [combo_raktar]</lua_on_change>
  <bgcolor>#497000</bgcolor>
  <font_color>#000000</font_color>
  <font_size>19</font_size>
  <height>40</height>
</text>
<label>
  <name>llogin</name>
  <top>80</top>
  <left>0</left>
  <width>match</width>
  <height>wrap</height>
  <visible>true</visible>
  <parent>panel1</parent>
  <style>reviewlabel</style>
  <text>Raktár</text>
</label>

<combo>
  <name>combo_raktar</name>
  <Items>-;Főraktár;Késmárk</Items>
  <top>110</top>
  <width>match</width>
  <height>60</height>
  <left>0</left>
  <parent>panel1</parent>
  <visible>true</visible>
  <bgcolor>#fafafa</bgcolor>
  <font_color>#000000</font_color>
</combo>

<custom_button>
  <style>buttondefault</style>
  <name>button_login</name>
  <Text>Bejelentkezés</Text>
  <top>185</top>
  <width>match</width>
  <height>70</height>
  <left>0</left>
  <lua_after_click>egyeb/login_click.lua [elogin] [combo_raktar]</lua_after_click>
  <parent>panel1</parent>
  <visible>true</visible>
  <image>arrow-right.png</image>
</custom_button>
<custom_button>
  <style>buttondefault</style>
  <name>button_exit</name>
  <Text>Kilépés</Text>
  <top>255</top>
  <width>match</width>
  <height>70</height>
  <left>0</left>
  <lua_after_click>egyeb/login_exit.lua</lua_after_click>
  <parent>panel1</parent>
  <visible>true</visible>
  <image>exit.png</image>
</custom_button>


</Root>